<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lays.fote"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="16" />
    
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="false"
        android:normalScreens="true"
        android:smallScreens="false"
        android:xlargeScreens="false" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FoteApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name=".activities.MainActivity"
            android:label="Fote"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Fote" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.FotingActivity"
            android:label="New Fote"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Fote" />
        <activity
            android:name=".activities.EditingFoteActivity"
            android:label="Edit"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Fote" />
        <activity
            android:name=".activities.MonthListActivity"
            android:label="All Months"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Fote" />
        <activity
            android:name=".activities.SettingsActivity"
            android:label="Settings"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Fote" />
        <activity
            android:name=".activities.SettingsNewActivity"
            android:label="Settings"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Fote" />
        <activity
            android:name=".activities.AboutActivity"
            android:label="About"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Fote" />
    </application>

</manifest>