    <!-- Our main style for Lua application -->
    <style name="Theme.Fote" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Theme.Fote.ActionBar</item>
        <item name="android:actionBarStyle">@style/Theme.Fote.ActionBar</item>
    </style>
    
    <!-- A style resources for the action bar -->
    <style name="Theme.Fote.ActionBar" parent="Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/main</item>
        <item name="android:background">@drawable/main</item>
        <item name="titleTextStyle">@style/FoteTitle</item>
        <item name="android:titleTextStyle">@style/FoteTitle</item>
    </style>
    
    <!-- A style resource for text labels in AboutActivity -->
    <style name="FoteAbout">
        <item name="android:textSize">18sp</item>
		<item name="android:textColor">@color/fote_dark</item>
    </style>
    
    <!-- A style resource for title labels in all Activities -->
    <style name="FoteTitle">
        <item name="android:textSize">22sp</item>
		<item name="android:textColor">@color/fote_light</item>
		<item name="android:textStyle">bold</item>
    </style>
    
    <!-- A style resource for text labels in EditingFote and Foting Activity -->
    <style name="FoteLabel">
        <item name="android:textSize">25sp</item>
		<item name="android:textColor">@color/fote_dark</item>
    </style>
    
    <!-- A style resource for text fields in EditingFote and Foting Activity -->
    <style name="FoteText">
        <item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/fote_light</item>
		<item name="android:textStyle">bold</item>
    </style>
    
</resources>