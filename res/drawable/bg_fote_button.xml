<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- focused -->
    <item android:state_focused="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#51B8E2" android:startColor="#2497CC" />

            <corners android:radius="10dp" />
        </shape></item>
    <!-- pressed -->
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#51B8E2" android:startColor="#2497CC" />

            <corners android:radius="10dp" />
        </shape></item>
    <!-- selected -->
    <item android:state_selected="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#51B8E2" android:startColor="#2497CC" />

            <corners android:radius="10dp" />
        </shape></item>
    <!-- default -->
    <item><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#3FAED5" android:endColor="#2497CC" android:startColor="#51B8E2" />

            <corners android:radius="10dp" />
        </shape></item>

</selector>