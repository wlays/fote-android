<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FotingActivity" >

    <TextView
        android:id="@+id/fote_amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="@string/fote_amount_label"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/fote_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:singleLine="true" />

    <TextView
        android:id="@+id/fote_comment_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/fote_comment_label"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/fote_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true" />

    <TextView
        android:id="@+id/fote_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/fote_date_label"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/fote_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:onClick="editDate"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/fote_date"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="createFote"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/fote_done"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>